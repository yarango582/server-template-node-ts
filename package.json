{
  "name": "server-template-node-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "d-build": "npm run clean && tsc -p tsconfig.json",
    "clean": "rimraf dist/*",
    "start": "ts-node src/index.ts",
    "dev": "nodemon  src/index.ts",
    "dev:inspect": "nodemon --inspect src/index.ts",
    "test": "jest -w 1",
    "test:watch": "jest -w 1 --watch",
    "changelog": "auto-changelog --template src/templates/changelog.hbs -p && git add CHANGELOG.md",
    "changelog:debug": "auto-changelog --template src/templates/changelog.hbs -p --template json --output changelog-data.json",
    "lint": "tslint -p tsconfig.json",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:version": "npm run typeorm version",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:show": "npm run typeorm migration:show",
    "entity:create": "npm run typeorm entity:create -- -n",
    "subscriber:create": "npm run typeorm subscriber:create -- -n",
    "schema:sync": "npm run typeorm schema:sync",
    "schema:log": "npm run typeorm schema:log",
    "schema:drop": "npm run typeorm schema:drop",
    "cache:clear": "npm run typeorm cache:clear",
    "query": "npm run typeorm query",
    "copy:docs": "cpy 'docs/**/*.yaml' '../dist/' --cwd=src --parents"
  },
  "keywords": [],
  "author": "yarangodev",
  "license": "MIT",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jest": "^29.4.1",
    "mongodb": "^5.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.9.0",
    "routing-controllers": "^0.10.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.0",
    "typeorm": "^0.3.11",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.16",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/parser": "^5.50.0",
    "dotenv": "^16.0.3",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
